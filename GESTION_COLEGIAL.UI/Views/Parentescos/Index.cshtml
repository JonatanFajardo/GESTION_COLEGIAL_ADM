@model GESTION_COLEGIAL.Business.Models.ParentescoViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/Content/css/modal-detail.css" rel="stylesheet" />
}

<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Parentesco</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    @* Listado *@
    <div class="card">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Listado de parentescos</h3></div>
                @* <div class="col-md-3"><button class="btn btn-primary mdi mdi-plus-circle-outline float-right" id="add-btn" data-toggle="modal" data-target="#edit-modal">  Nuevo</button></div> *@
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Ajax.BeginForm("CreateAsync", "Parentescos", new AjaxOptions
                {
                    HttpMethod = "Post",
                    OnBegin = "Catalogs.begin",
                    OnComplete = "Catalogs.complete",
                    OnFailure = "Catalogs.failure",
                    OnSuccess = "Catalogs.success"

                }))
                {
                <div class="fluid-container">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(model => model.Par_Id, new { @id = "item-id" })
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Par_Descripcion, "Descripción", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Par_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Par_Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i>Guardar</button>
                    </div>
                </div>}
            </div>
        </div>
    </div>
    <!-- Fin Modal -->
    <!-- Modal Delete-->
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="deleteModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 440px;">
            @using (Ajax.BeginForm("DeleteAsync", "Parentescos", new AjaxOptions
            {
                HttpMethod = "Post",
                OnBegin = "Catalogs.begin",
                OnComplete = "Catalogs.complete",
                OnFailure = "Catalogs.failure",
                OnSuccess = "Catalogs.success"
            }))
            {
            <div class="modal-content" style="border-radius: 12px; border: none;">
                <!-- Header sin título, solo botón cerrar -->
                <div class="modal-header" style="border-bottom: none; padding: 20px 24px 0;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="padding: 0; margin: 0; opacity: 0.5;">
                        <span aria-hidden="true" style="font-size: 24px;">&times;</span>
                    </button>
                </div>

                <div class="modal-body text-center" style="padding: 0 40px 32px;">
                    @Html.HiddenFor(model => model.Par_Id, new { @id = "delete-item-id" })

                    <!-- Ícono de advertencia grande -->
                    <div class="d-flex justify-content-center mb-3">
                        <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <div style="width: 56px; height: 56px; background-color: #dc2626; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-exclamation-triangle" style="color: white; font-size: 28px;"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Título -->
                    <h5 class="mb-3" style="color: #1f2937; font-weight: 600; font-size: 20px;">Eliminar parentesco</h5>

                    <!-- Mensaje de confirmación -->
                    <p class="mb-4" style="color: #6b7280; font-size: 14px; line-height: 1.5;">
                        ¿Está seguro de que desea eliminar el parentesco <span id="delete-item-name" style="font-weight: 600;"></span>?
                    </p>

                    <!-- Área de advertencia -->
                    <div class="alert d-flex align-items-start text-left" style="background-color: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 16px; margin-bottom: 0;">
                        <div style="flex-shrink: 0; margin-right: 12px;">
                            <i class="fas fa-exclamation-triangle" style="color: #dc2626; font-size: 18px;"></i>
                        </div>
                        <div style="flex: 1;">
                            <p class="mb-1" style="color: #991b1b; font-weight: 600; font-size: 13px; margin: 0;">Esta acción no se puede deshacer</p>
                            <p class="mb-0" style="color: #991b1b; font-size: 13px; margin: 0;">El registro será eliminado permanentemente del sistema.</p>
                        </div>
                    </div>
                </div>

                <div class="modal-footer" style="border-top: none; padding: 0 40px 32px; gap: 12px;">
                    <button type="button" class="btn" data-dismiss="modal" style="flex: 1; padding: 10px 24px; border-radius: 8px; font-weight: 500; background-color: #f3f4f6; border: 1px solid #d1d5db; color: #374151 !important; font-size: 14px;">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger" style="flex: 1; padding: 10px 24px; border-radius: 8px; font-weight: 500; background-color: #dc2626; border: none; font-size: 14px;">
                        Eliminar
                    </button>
                </div>
            </div>
            }
        </div>
    </div>
    <!-- Fin Modal -->

    <!-- Modal Detalle -->
    <div class="modal fade" id="detail-modal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <!-- Header with Orange Gradient -->
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel">
                        <i class="fas fa-file-alt"></i>
                        Detalle del Parentesco
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <!-- Info Card - ID and Description -->
                    <div class="info-card">
                        <div class="info-grid">
                            <div>
                                <label class="info-label">ID</label>
                                <p class="info-value" id="detail-par-id"></p>
                            </div>
                            <div>
                                <label class="info-label">Descripción</label>
                                <p class="info-value" id="detail-par-descripcion"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Section -->
                    <div class="audit-section">
                        <h6 class="audit-section-title">
                            <i class="fas fa-history"></i>
                            Información de Auditoría
                        </h6>

                        <!-- Created -->
                        <div class="audit-card">
                            <div class="audit-icon green">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="audit-info">
                                <div>
                                    <label class="audit-label">Creado por</label>
                                    <p class="audit-value" id="detail-par-usuarioregistranombre"></p>
                                </div>
                                <div>
                                    <label class="audit-label">
                                        <i class="fas fa-calendar icon-small"></i>
                                        Fecha de creación
                                    </label>
                                    <p class="audit-value" id="detail-par-fecharegistra"></p>
                                </div>
                            </div>
                        </div>

                        <!-- Modified -->
                        <div class="audit-card">
                            <div class="audit-icon blue">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="audit-info">
                                <div>
                                    <label class="audit-label">Modificado por</label>
                                    <p class="audit-value" id="detail-par-usuariomodificanombre"></p>
                                </div>
                                <div>
                                    <label class="audit-label">
                                        <i class="fas fa-calendar icon-small"></i>
                                        Fecha de modificación
                                    </label>
                                    <p class="audit-value" id="detail-par-fechamodifica"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="mdi mdi-close mr-1"></i>Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin Modal Detalle -->
</div>

@section Scripts{
    <script src="~/Content/js/pages/parentescos.js"></script>
    <script>
        Parentescos.datatableCatalogs({
            urlList: "@Url.Action("ListAsync")",
            urlDetail: "Detail"
        });
    </script>
    <script>
        Catalogs.configure({
            displayName: "parentescos",
            urlUpdate: "@Url.Action("FindAsync")"
        });
        CatalogsCfg.configure({
            displayName: "parentesco",
            getUrl: "@Url.Action("DetailAsync")"
        });
    </script>
}