                        <th>Nombre</th>
                        <th>Informacion</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Concluido</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/eventos.js"></script>
    <script>
        Eventos.datatableCatalogs({
            urlList: "@Url.Action("ListAsync")",
            urlInsert: "@Url.Action("CreateAsync")",
            urlUpdate: "@Url.Action("FindAsync")",
            urlDetail: "Detail"
        });
    </script>
}