                        </div>
                    </div>
                    @* Columna Identidad *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Identidad, "Identidad", htmlAttributes: new { @class = "control-label" })
