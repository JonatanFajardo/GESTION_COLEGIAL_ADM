                        </div>
                    </div>
                    @* Columna Segundo Nombre *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_SegundoNombre, "Segundo Nombre", htmlAttributes: new { @class = "control-label" })
