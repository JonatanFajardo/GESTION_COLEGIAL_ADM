                    @* Columna Ocupación *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Enc_Ocupacion, "Ocupación", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Enc_Ocupacion, new { htmlAttributes = new { @class = "form-control" } })
