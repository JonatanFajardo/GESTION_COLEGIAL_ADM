@model GESTION_COLEGIAL.Business.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduManager - Iniciar Sesion</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="container">
        <!-- Animated background shapes -->
        <div class="background-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
        </div>

        <div class="content-wrapper">
            <div class="grid-container">
                <!-- Left side - Branding -->
                <div class="branding-section">
                    <div class="logo-container">
                        <div class="logo-wrapper">
                            <div class="logo-box">
                                <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                                    <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
                                </svg>
                            </div>
                            <div class="logo-glow"></div>
                        </div>
                    </div>

                    <div class="branding-text">
                        <h1 class="branding-title">EduManager</h1>
                        <p class="branding-description">
                            Sistema integral de gestion escolar. Administra estudiantes, profesores, calificaciones y mas desde una sola plataforma.
                        </p>
                    </div>

                    <div class="features-grid">
                        <div class="feature-card" style="animation-delay: 0.8s">
                            <p>Estudiantes</p>
                        </div>
                        <div class="feature-card" style="animation-delay: 0.9s">
                            <p>Profesores</p>
                        </div>
                        <div class="feature-card" style="animation-delay: 1s">
                            <p>Calificaciones</p>
                        </div>
                    </div>
                </div>

                <!-- Right side - Login Form -->
                <div class="form-section">
                    <div class="form-card">
                        <!-- Mobile logo -->
                        <div class="mobile-logo">
                            <div class="mobile-logo-box">
                                <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                                    <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
                                </svg>
                            </div>
                            <h1 class="mobile-logo-title">EduManager</h1>
                        </div>

                        <div class="form-header">
                            <h2>Bienvenido</h2>
                            <p>Ingresa tus credenciales para acceder al sistema</p>
                        </div>

                        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", id = "loginForm" }))
                        {
                            @Html.AntiForgeryToken()

                            if (!ViewData.ModelState.IsValid)
                            {
                                <div class="error-message">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            }

                            <div class="form-group">
                                @Html.LabelFor(m => m.Username, "Usuario")
                                <div class="input-wrapper">
                                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                                        <path d="m 2 7 10 7 10-7"></path>
                                    </svg>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "usuario", required = "required" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, "Contrasena")
                                <div class="input-wrapper">
                                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••", required = "required" })
                                    <button type="button" class="password-toggle" id="togglePassword">
                                        <svg class="eye-icon" id="eyeIcon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
                                            <circle cx="12" cy="12" r="3"></circle>
                                        </svg>
                                        <svg class="eye-icon hidden" id="eyeOffIcon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"></path>
                                            <path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"></path>
                                            <path d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"></path>
                                            <line x1="2" y1="2" x2="22" y2="22"></line>
                                        </svg>
                                    </button>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-options">
                                <div class="checkbox-wrapper">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { id = "remember" })
                                    @Html.LabelFor(m => m.RememberMe, "Recordarme", new { @for = "remember" })
                                </div>
                            </div>

                            <button type="submit" class="submit-button">
                                <span>Iniciar Sesion</span>
                                <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                    <polyline points="12 5 19 12 12 19"></polyline>
                                </svg>
                            </button>
                        }

                        <div class="form-footer">
                            <p>
                                Sistema de Gestion Colegial
                            </p>
                        </div>
                    </div>

                    <p class="copyright">
                        © 2025 EduManager. Todos los derechos reservados.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/login.js"></script>
</body>
</html>
