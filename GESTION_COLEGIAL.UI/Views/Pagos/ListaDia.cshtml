@model GESTION_COLEGIAL.Business.Models.PagoViewModel
@{
    ViewBag.Title = "Pagos del Día";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Módulo Financiero</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Registro de Pagos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Pagos del Día</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    <!-- Resumen del Día -->
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5>Total del Día</h5>
                    <h3 class="text-success" id="total-dia">L. 0.00</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5>Cantidad de Pagos</h5>
                    <h3 class="text-info" id="cantidad-pagos">0</h3>
                </div>
            </div>
        </div>
    </div>

    @* Listado *@
    <div class="card">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Pagos del día - @DateTime.Now.ToString("dd/MM/yyyy")</h3></div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Hora</th>
                        <th>Alumno</th>
                        <th>Monto</th>
                        <th>Forma de Pago</th>
                        <th>Referencia</th>
                        <th>Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/pagosdia.js"></script>
    <script>
        PagosDia.datatable({
            urlList: "@Url.Action("ListByFechaAsync", "Pagos")",
            urlRecibo: "@Url.Action("GetReciboAsync", "Pagos")"
        });
    </script>
}
