@{
    ViewBag.Title = "Registro de Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/Content/css/listado-catalogos.css" rel="stylesheet" />
}

<div class="breadcrumb-wrapper-content">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="#">Financiero</a></li>
            <li class="breadcrumb-item active" aria-current="page">Pagos</li>
        </ol>
    </nav>
</div>

<div class="page-header-catalogo">
    <div class="header-content-wrapper-catalogo">
        <div class="header-left-catalogo">
            <div class="header-icon-catalogo">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="1" x2="12" y2="23"></line>
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                </svg>
            </div>
            <div class="header-text-catalogo">
                <h1>Registro de Pagos</h1>
                <p>Administre los pagos y transacciones financieras del sistema</p>
            </div>
        </div>
        <div class="header-action-catalogo">
            <a href="@Url.Action("NuevoPago", "Pagos")" class="btn-nuevo-catalogo" style="background: rgba(40, 167, 69, 0.2); border-color: rgba(40, 167, 69, 0.3);">
                <i class="mdi mdi-cash-register"></i>
                Nuevo Pago
            </a>
        </div>
    </div>
</div>

<div class="fluid-container">
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Ingresos del Día</h5>
                    <h2 class="text-success" id="ingresos-dia">L 0.00</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Pagos Registrados Hoy</h5>
                    <h2 class="text-info" id="pagos-hoy">0</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card-listado-catalogo">
        <div class="card-header-listado-catalogo">
            <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
                Listado de Pagos
            </h3>
        </div>

        <div class="card-body-listado-catalogo">
            <div class="table-responsive">
                <table class="table table-striped table-bordered nowrap" id="datatable">
                    <thead>
                        <tr>
                            <th>No. Recibo</th>
                            <th>Fecha</th>
                            <th>Alumno</th>
                            <th>Encargado</th>
                            <th>Forma Pago</th>
                            <th>Monto Total</th>
                            <th>Usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nuevo Pago -->
<div class="modal fade" id="pago-modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registrar Pago</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Ajax.BeginForm("CreateAsync", "Pagos", new AjaxOptions
            {
                HttpMethod = "Post",
                OnBegin = "Pagos.begin",
                OnComplete = "Pagos.complete",
                OnSuccess = "Pagos.success"
            }))
            {
                <div class="modal-body">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Alumno *</label>
                                <select class="form-control" id="alumno-select" name="Alu_Id" required>
                                    <option value="">Seleccione un alumno</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Encargado</label>
                                <select class="form-control" id="encargado-select" name="Enc_Id">
                                    <option value="">Seleccione encargado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Forma de Pago *</label>
                                <select class="form-control" id="forma-pago-select" name="Fpa_Id" required>
                                    <option value="">Seleccione forma de pago</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Número de Referencia</label>
                                <input type="text" class="form-control" name="Pag_NumeroReferencia" placeholder="Núm. cheque, transferencia, etc.">
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5>Cuentas Pendientes</h5>
                    <div id="cuentas-pendientes-container"></div>

                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Total a Pagar: <span class="text-success" id="total-pagar">L 0.00</span></h4>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success"><i class="mdi mdi-cash-register"></i> Registrar Pago</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/pagos.js?v=@DateTime.Now.Ticks"></script>
}
