@{
    ViewBag.Title = "Registro de Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-wrapper-content">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="#">Financiero</a></li>
            <li class="breadcrumb-item active" aria-current="page">Pagos</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Ingresos del Día</h5>
                    <h2 class="text-success" id="ingresos-dia">L 0.00</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Pagos Registrados Hoy</h5>
                    <h2 class="text-info" id="pagos-hoy">0</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Listado de Pagos</h3></div>
                <div class="col-md-3">
                    <button class="btn btn-success float-right" id="nuevo-pago-btn" data-toggle="modal" data-target="#pago-modal">
                        <i class="mdi mdi-cash-register"></i> Nuevo Pago
                    </button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>No. Recibo</th>
                        <th>Fecha</th>
                        <th>Alumno</th>
                        <th>Encargado</th>
                        <th>Forma Pago</th>
                        <th>Monto Total</th>
                        <th>Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal Nuevo Pago -->
<div class="modal fade" id="pago-modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registrar Pago</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Ajax.BeginForm("CreateAsync", "Pagos", new AjaxOptions
            {
                HttpMethod = "Post",
                OnBegin = "Pagos.begin",
                OnComplete = "Pagos.complete",
                OnSuccess = "Pagos.success"
            }))
            {
                <div class="modal-body">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Alumno *</label>
                                <select class="form-control" id="alumno-select" name="Alu_Id" required>
                                    <option value="">Seleccione un alumno</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Encargado</label>
                                <select class="form-control" id="encargado-select" name="Enc_Id">
                                    <option value="">Seleccione encargado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Forma de Pago *</label>
                                <select class="form-control" id="forma-pago-select" name="Fpa_Id" required>
                                    <option value="">Seleccione forma de pago</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Número de Referencia</label>
                                <input type="text" class="form-control" name="Pag_NumeroReferencia" placeholder="Núm. cheque, transferencia, etc.">
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5>Cuentas Pendientes</h5>
                    <div id="cuentas-pendientes-container"></div>

                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Total a Pagar: <span class="text-success" id="total-pagar">L 0.00</span></h4>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success"><i class="mdi mdi-cash-register"></i> Registrar Pago</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                ajax: {
                    url: "@Url.Action("ListAsync")",
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'Pag_Id' },
                    { data: 'Pag_FechaPago' },
                    { data: 'AlumnoNombre' },
                    { data: 'EncargadoNombre' },
                    { data: 'FormaPagoDescripcion' },
                    {
                        data: 'Pag_MontoTotal',
                        render: function (data) {
                            return '<strong class="text-success">L ' + parseFloat(data).toFixed(2) + '</strong>';
                        }
                    },
                    { data: 'UsuarioNombre' },
                    {
                        data: null,
                        render: function (data) {
                            return '<button class="btn btn-sm btn-primary recibo-btn" data-id="' + data.Pag_Id + '"><i class="mdi mdi-printer"></i> Recibo</button>';
                        }
                    }
                ]
            });
        });
    </script>
}
