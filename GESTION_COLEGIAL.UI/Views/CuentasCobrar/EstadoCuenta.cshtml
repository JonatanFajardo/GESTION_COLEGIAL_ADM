@model GESTION_COLEGIAL.Business.Models.CuentaCobrarViewModel
@{
    ViewBag.Title = "Estado de Cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Módulo Financiero</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Cuentas por Cobrar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Estado de Cuenta</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    <!-- Panel de Búsqueda de Alumno -->
    <div class="card" id="panel-busqueda">
        <div class="card-header" style="background-color:white;">
            <h3>Buscar Alumno</h3>
            <small class="text-muted">Ingrese el número de identidad del alumno para ver su estado de cuenta</small>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="alumno-identidad-search">Número de Identidad</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="alumno-identidad-search" placeholder="Ingrese la identidad del alumno..." maxlength="13" />
                            <div class="input-group-append">
                                <button class="btn btn-info" type="button" id="btn-buscar-alumno">
                                    <i class="mdi mdi-magnify"></i> Buscar
                                </button>
                            </div>
                        </div>
                        <small class="form-text text-muted">Ingrese el número de identidad (13 dígitos)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Card de Bienvenida / Placeholder -->
<div id="card-placeholder" class="card mt-3">
    <div class="card-body text-center py-5">
        <div class="mb-4">
            <i class="mdi mdi-account-search" style="font-size: 80px; color: #4361ee;"></i>
        </div>
        <h3 class="mb-3">Estado de Cuenta de Alumnos</h3>
        <p class="text-muted mb-4">Busque un alumno por su número de identidad para visualizar su estado financiero completo</p>

        <div class="row mt-5">
            <div class="col-md-4">
                <div class="p-3">
                    <i class="mdi mdi-cash-multiple text-success" style="font-size: 40px;"></i>
                    <h5 class="mt-2">Cargos Pendientes</h5>
                    <p class="text-muted small">Visualice todos los cargos pendientes de pago del alumno</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="mdi mdi-chart-line text-primary" style="font-size: 40px;"></i>
                    <h5 class="mt-2">Resumen Financiero</h5>
                    <p class="text-muted small">Consulte el resumen completo de deudas, pagos y mora</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="mdi mdi-history text-info" style="font-size: 40px;"></i>
                    <h5 class="mt-2">Histórico de Pagos</h5>
                    <p class="text-muted small">Revise todos los pagos realizados por el alumno</p>
                </div>
            </div>
        </div>

        <div class="alert alert-info mt-4 d-inline-block" role="alert">
            <i class="mdi mdi-information-outline mr-2"></i>
            <strong>Tip:</strong> Use el campo de búsqueda arriba para comenzar
        </div>
    </div>
</div>

<div id="paneles-informacion" style="display: none;">

    <!-- Panel de Información del Alumno -->
    <div class="card" id="panel-info-alumno" style="display:none;">
        <div class="card-header" style="background-color:white;">
            <div class="row">
                <div class="col-md-9">
                    <h3>Información del Alumno</h3>
                    <small class="text-muted">Detalle financiero completo del alumno seleccionado</small>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-secondary float-right" id="btn-cambiar-alumno">
                        <i class="mdi mdi-account-search"></i> Cambiar Alumno
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body" style="background-color:white;">
            <div class="row">
                <div class="col-md-6">
                    <p style="color: #333;"><strong>Nombre:</strong> <span id="alumno-nombre"></span></p>
                    <p style="color: #333;"><strong>Identidad:</strong> <span id="alumno-identidad"></span></p>
                    <p style="color: #333;"><strong>Nivel:</strong> <span id="alumno-nivel"></span></p>
                </div>
                <div class="col-md-6">
                    <p style="color: #333;"><strong>Curso:</strong> <span id="alumno-curso"></span></p>
                    <p style="color: #333;"><strong>Sección:</strong> <span id="alumno-seccion"></span></p>
                    <p style="color: #333;"><strong>Encargado:</strong> <span id="alumno-encargado"></span></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel de Resumen Financiero -->
    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5>Total Deuda</h5>
                    <h3 class="text-danger" id="total-deuda">L. 0.00</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5>Total Pagado</h5>
                    <h3 class="text-success" id="total-pagado">L. 0.00</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5>Pendiente</h5>
                    <h3 class="text-warning" id="total-pendiente">L. 0.00</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5>Mora</h5>
                    <h3 class="text-danger" id="total-mora">L. 0.00</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel de Cargos Pendientes -->
    <div class="card mt-3">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Cargos Pendientes</h3></div>
                <div class="col-md-3">
                    <button class="btn btn-primary float-right" id="btn-registrar-pago">
                        <i class="mdi mdi-cash-multiple"></i> Registrar Pago
                    </button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped" id="tabla-cargos-pendientes">
                <thead>
                    <tr>
                        <th>Concepto</th>
                        <th>Monto Original</th>
                        <th>Descuento</th>
                        <th>Mora</th>
                        <th>Total</th>
                        <th>Fecha Venc.</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="tbody-cargos-pendientes">
                </tbody>
            </table>
        </div>
    </div>

    <!-- Panel de Histórico de Pagos -->
    <div class="card mt-3">
        <div class="card-header" style="background-color:white;">
            <h3>Histórico de Pagos</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-striped" id="tabla-historico-pagos">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Forma de Pago</th>
                        <th>Referencia</th>
                        <th>Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="tbody-historico-pagos">
                </tbody>
            </table>
        </div>
    </div>
</div>

</div>

<!-- Modal Detalle de Cargo -->
<div class="modal fade" id="detail-cargo-modal" tabindex="-1" role="dialog" aria-labelledby="detailCargoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailCargoModalLabel">
                    <i class="mdi mdi-file-document-outline mr-2"></i>Detalle del Cargo
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">ID Cuenta</label>
                            <p class="font-weight-bold" id="detail-cargo-id"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Concepto de Pago</label>
                            <p class="font-weight-bold" id="detail-cargo-concepto"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Monto Original</label>
                            <p class="font-weight-bold" id="detail-cargo-monto-original"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Descuento Aplicado</label>
                            <p class="font-weight-bold text-success" id="detail-cargo-descuento"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Mora</label>
                            <p class="font-weight-bold text-danger" id="detail-cargo-mora"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Monto Total</label>
                            <p class="font-weight-bold text-primary h5" id="detail-cargo-total"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Fecha de Vencimiento</label>
                            <p class="font-weight-bold" id="detail-cargo-fecha-venc"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Estado</label>
                            <p id="detail-cargo-estado"></p>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Fecha de Creación</label>
                            <p class="font-weight-bold" id="detail-cargo-fecha-creacion"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Observaciones</label>
                            <p id="detail-cargo-observaciones"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="mdi mdi-close mr-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Detalle de Pago -->
<div class="modal fade" id="detail-pago-modal" tabindex="-1" role="dialog" aria-labelledby="detailPagoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="detailPagoModalLabel">
                    <i class="mdi mdi-cash-multiple mr-2"></i>Detalle del Pago
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">ID Pago</label>
                            <p class="font-weight-bold" id="detail-pago-id"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Fecha de Pago</label>
                            <p class="font-weight-bold" id="detail-pago-fecha"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Monto Total</label>
                            <p class="font-weight-bold text-success h5" id="detail-pago-monto"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Forma de Pago</label>
                            <p class="font-weight-bold" id="detail-pago-forma"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Número de Referencia</label>
                            <p class="font-weight-bold" id="detail-pago-referencia"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Número de Recibo</label>
                            <p class="font-weight-bold" id="detail-pago-recibo"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Usuario que Registró</label>
                            <p class="font-weight-bold" id="detail-pago-usuario"></p>
                        </div>
                        <div class="detail-item mb-3">
                            <label class="text-muted small mb-1">Estado</label>
                            <p id="detail-pago-estado"></p>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <label class="text-muted small mb-1">Conceptos Pagados</label>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered" id="tabla-conceptos-pago">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Concepto</th>
                                        <th>Monto</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody-conceptos-pago">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="detail-item">
                            <label class="text-muted small mb-1">Observaciones</label>
                            <p id="detail-pago-observaciones"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info btn-ver-recibo-detail" id="btn-ver-recibo-modal">
                    <i class="mdi mdi-receipt mr-1"></i>Ver Recibo
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="mdi mdi-close mr-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/estadocuenta.js"></script>
    <script>
        var alumnoId = @ViewBag.AlumnoId;
        EstadoCuenta.init({
            alumnoId: alumnoId,
            urlFindAlumnoByIdentidad: "@Url.Action("FindByIdentidadAsync", "Alumnos")",
            urlCargosPendientes: "@Url.Action("ObtenerCargosPendientesAsync", "CuentasCobrar")",
            urlResumenFinanciero: "@Url.Action("ObtenerResumenFinancieroAsync", "CuentasCobrar")",
            urlHistoricoPagos: "@Url.Action("ObtenerHistoricoPagosAsync", "CuentasCobrar")",
            urlAplicarDescuento: "@Url.Action("AplicarDescuentoAsync", "CuentasCobrar")",
            urlCalcularMora: "@Url.Action("CalcularMoratoriaAsync", "CuentasCobrar")",
            urlRecibo: "@Url.Action("GetReciboAsync", "Pagos")"
        });
    </script>
}
