@{
    ViewBag.Title = "Lista de Deudores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">MÃ³dulo Financiero</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Cuentas por Cobrar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Lista de Deudores</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    @* Listado *@
    <div class="card">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9">
                    <h3>Listado de deudores</h3>
                    <small class="text-muted">Cuentas vencidas no pagadas</small>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>Fila</th>
                        <th>Concepto</th>
                        <th>Alumno</th>
                        <th>Pendiente</th>
                        <th>Fecha Vence</th>
                        <th>Estado Pago</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/deudores.js"></script>
    <script>
        Deudores.datatable({
            urlList: "@Url.Action("ListDeudoresAsync", "CuentasCobrar")"
        });
    </script>
}
