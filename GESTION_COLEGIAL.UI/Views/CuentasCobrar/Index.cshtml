@{
    ViewBag.Title = "Cuentas por Cobrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/Content/css/listado-catalogos.css" rel="stylesheet" />
}

<div class="breadcrumb-wrapper-content">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="#">Financiero</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cuentas por Cobrar</li>
        </ol>
    </nav>
</div>

<div class="page-header-catalogo">
    <div class="header-content-wrapper-catalogo">
        <div class="header-left-catalogo">
            <div class="header-icon-catalogo">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                </svg>
            </div>
            <div class="header-text-catalogo">
                <h1>Cuentas por Cobrar</h1>
                <p>Administre y monitoree las cuentas pendientes de pago del sistema</p>
            </div>
        </div>
        <div class="header-action-catalogo">
            <a href="@Url.Action("Deudores")" class="btn-nuevo-catalogo" style="background: rgba(220, 53, 69, 0.2); border-color: rgba(220, 53, 69, 0.3);">
                <i class="mdi mdi-alert-circle"></i>
                Ver Deudores
            </a>
        </div>
    </div>
</div>

<div class="fluid-container">
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Pendiente</h5>
                    <h2 class="text-primary" id="total-pendiente">L 0.00</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Cuentas Vencidas</h5>
                    <h2 class="text-danger" id="cuentas-vencidas">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Alumnos Deudores</h5>
                    <h2 class="text-warning" id="alumnos-deudores">0</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card-listado-catalogo">
        <div class="card-header-listado-catalogo">
            <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
                Listado de Cuentas por Cobrar
            </h3>
            <small class="text-muted">Todas las cuentas pendientes (Monto Pendiente > 0)</small>
        </div>

        <div class="card-body-listado-catalogo">
            <div class="table-responsive">
                <table class="table table-striped table-bordered nowrap" id="datatable">
                    <thead>
                        <tr>
                            <th>Fila</th>
                            <th>Concepto</th>
                            <th>Alumno</th>
                            <th>Pendiente</th>
                            <th>Fecha Vence</th>
                            <th>Estado Pago</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/cuentascobrar.js"></script>
}
