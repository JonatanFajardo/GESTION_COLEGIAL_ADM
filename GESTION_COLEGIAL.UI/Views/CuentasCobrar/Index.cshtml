@{
    ViewBag.Title = "Cuentas por Cobrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-wrapper-content">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="#">Financiero</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cuentas por Cobrar</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Pendiente</h5>
                    <h2 class="text-primary" id="total-pendiente">L 0.00</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Cuentas Vencidas</h5>
                    <h2 class="text-danger" id="cuentas-vencidas">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Alumnos Deudores</h5>
                    <h2 class="text-warning" id="alumnos-deudores">0</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Listado de Cuentas por Cobrar</h3></div>
                <div class="col-md-3">
                    <a href="@Url.Action("Deudores")" class="btn btn-danger float-right">
                        <i class="mdi mdi-alert-circle"></i> Ver Deudores
                    </a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Alumno</th>
                        <th>Concepto</th>
                        <th>Monto Original</th>
                        <th>Descuento</th>
                        <th>Mora</th>
                        <th>Total</th>
                        <th>Pendiente</th>
                        <th>Vencimiento</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                ajax: {
                    url: "@Url.Action("ListAsync")",
                    dataSrc: ''
                },
                columns: [
                    { data: 'Cco_Id' },
                    { data: 'AlumnoNombre' },
                    { data: 'ConceptoDescripcion' },
                    {
                        data: 'Cco_MontoOriginal',
                        render: function (data) { return 'L ' + parseFloat(data).toFixed(2); }
                    },
                    {
                        data: 'Cco_MontoDescuento',
                        render: function (data) { return 'L ' + parseFloat(data).toFixed(2); }
                    },
                    {
                        data: 'Cco_MontoMora',
                        render: function (data) { return 'L ' + parseFloat(data).toFixed(2); }
                    },
                    {
                        data: 'Cco_MontoTotal',
                        render: function (data) { return 'L ' + parseFloat(data).toFixed(2); }
                    },
                    {
                        data: 'Cco_MontoPendiente',
                        render: function (data) {
                            return '<strong class="text-primary">L ' + parseFloat(data).toFixed(2) + '</strong>';
                        }
                    },
                    { data: 'Cco_FechaVencimiento' },
                    {
                        data: 'EstadoDescripcion',
                        render: function (data) {
                            if (data === 'Pendiente') return '<span class="badge badge-warning">Pendiente</span>';
                            if (data === 'Pagado') return '<span class="badge badge-success">Pagado</span>';
                            if (data === 'Vencido') return '<span class="badge badge-danger">Vencido</span>';
                            return '<span class="badge badge-secondary">' + data + '</span>';
                        }
                    },
                    {
                        data: null,
                        render: function (data) {
                            return '<button class="btn btn-sm btn-info detail-btn" data-id="' + data.Cco_Id + '"><i class="mdi mdi-eye"></i></button> ' +
                                   '<button class="btn btn-sm btn-warning discount-btn" data-id="' + data.Cco_Id + '"><i class="mdi mdi-sale"></i></button>';
                        }
                    }
                ]
            });
        });
    </script>
}
