@model GESTION_COLEGIAL.Business.Models.CuentaCobrarViewModel
@{
    ViewBag.Title = "Moratorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Módulo Financiero</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Cuentas por Cobrar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Moratorias</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    @* Listado *@
    <div class="card">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Cuentas con moratoria</h3></div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Alumno</th>
                        <th>Concepto</th>
                        <th>Monto Original</th>
                        <th>Días Vencido</th>
                        <th>Monto Mora</th>
                        <th>Total con Mora</th>
                        <th>Fecha Vencimiento</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/moratorias.js"></script>
    <script>
        Moratorias.datatable({
            urlList: "@Url.Action("ListVencidasAsync", "CuentasCobrar")",
            urlCalcularMora: "@Url.Action("CalcularMoratoriaAsync", "CuentasCobrar")"
        });
    </script>
}
