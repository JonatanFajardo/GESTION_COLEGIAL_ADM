@model GESTION_COLEGIAL.Business.Models.AlumnoViewModel
@{
    ViewBag.Title = "Detalle del Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var estadoColor = Model.Est_Descripcion == "Activo" ? "badge-success" :
                      Model.Est_Descripcion == "Suspendido" ? "badge-warning" :
                      Model.Est_Descripcion == "Graduado" ? "badge-primary" : "badge-secondary";

    var sexoTexto = Model.Per_Sexo == "M" ? "Masculino" : "Femenino";
}

<div class="breadcrumb-wrapper-content">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Alumnos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalle</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    <div class="detail-container">
        <!-- Header con informacion principal -->
        <div class="card mb-4">
            <div class="card-body" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 5px;">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center">
                        @if (!string.IsNullOrEmpty(Model.Per_Imagen))
                        {
                            var imageUrl = Model.Per_Imagen.Replace("~/", "/");
                            <img src="@imageUrl" alt="@Model.Alu_Nombre" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover; border: 4px solid white;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-white d-flex align-items-center justify-content-center" style="width: 120px; height: 120px; margin: 0 auto;">
                                <i class="mdi mdi-account" style="font-size: 60px; color: #667eea;"></i>
                            </div>
                        }
                        <div class="mt-2">
                            <span class="badge badge-light">#@Model.Alu_Id.ToString().PadLeft(4, '0')</span>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <h2 class="mb-1">@Model.Alu_Nombre</h2>
                        <p class="mb-2">
                            <i class="mdi mdi-school"></i> @Model.Niv_Descripcion - @Model.Cno_Descripcion
                        </p>
                        <div class="d-flex flex-wrap">
                            <span class="mr-3"><i class="mdi mdi-card-account-details"></i> @Model.Per_Identidad</span>
                            <span class="mr-3"><i class="mdi mdi-book-open-variant"></i> @Model.Sec_Descripcion</span>
                            <span><i class="mdi mdi-calendar"></i> @Model.AnioCursado</span>
                        </div>
                    </div>
                    <div class="col-md-3 text-right">
                        <a href="@Url.Action("FindAsync", new { id = Model.Alu_Id })" class="btn btn-light mb-2">
                            <i class="mdi mdi-pencil"></i> Editar
                        </a>
                        <br>
                        <a href="@Url.Action("Index")" class="btn btn-outline-light">
                            <i class="mdi mdi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Informacion Personal -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="mdi mdi-account-card-details mr-2"></i>Informacion Personal</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Primer Nombre:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_PrimerNombre</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Segundo Nombre:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_SegundoNombre</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Apellido Paterno:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_ApellidoPaterno</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Apellido Materno:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_ApellidoMaterno</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Identidad:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_Identidad</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Fecha Nacimiento:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_FechaNacimiento.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Sexo:</div>
                            <div class="col-7 font-weight-bold">@sexoTexto</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informacion de Contacto -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="mdi mdi-phone mr-2"></i>Informacion de Contacto</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Telefono:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_Telefono</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Correo:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_CorreoElectronico</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Direccion:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_Direccion</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Informacion Academica -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="mdi mdi-school mr-2"></i>Informacion Academica</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Nivel Educativo:</div>
                            <div class="col-7 font-weight-bold">@Model.Niv_Descripcion</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Curso Nivel:</div>
                            <div class="col-7 font-weight-bold">@Model.Cno_Descripcion</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Modalidad:</div>
                            <div class="col-7 font-weight-bold">@Model.Mda_Descripcion</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Curso:</div>
                            <div class="col-7 font-weight-bold">@Model.Cur_Descripcion</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Seccion:</div>
                            <div class="col-7 font-weight-bold">@Model.Sec_Descripcion</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Anio Cursado:</div>
                            <div class="col-7 font-weight-bold">@Model.AnioCursado</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Estado:</div>
                            <div class="col-7">
                                <span class="badge @estadoColor">@Model.Est_Descripcion</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informacion de Auditoria -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="mdi mdi-clock-outline mr-2"></i>Informacion de Registro</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Creado por:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_UsuarioRegistraNombre</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-5 text-muted">Fecha Creacion:</div>
                            <div class="col-7 font-weight-bold">@Model.Per_FechaRegistra.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        @if (Model.Per_FechaModifica.HasValue)
                        {
                            <div class="row mb-3">
                                <div class="col-5 text-muted">Modificado por:</div>
                                <div class="col-7 font-weight-bold">@Model.Per_UsuarioModificaNombre</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-5 text-muted">Fecha Modificacion:</div>
                                <div class="col-7 font-weight-bold">@Model.Per_FechaModifica.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/alumnos.detail.js"></script>
}
