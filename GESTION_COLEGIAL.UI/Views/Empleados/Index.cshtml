
@model GESTION_COLEGIAL.UI.Models.EmpleadoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Empleados", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de Empleados</h3>
            </div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Emp_Id)
                @* Columna Emp_Codigo *@
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Emp_Codigo, "Emp_Codigo", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Emp_Codigo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Emp_Codigo, "", new { @class = "text-danger" })
                    </div>
                </div>
                @* Columna Per_Id *@
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Per_Id, "Per_Id", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Per_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Per_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                @* Columna Tit_Id *@
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tit_Id, "Tit_Id", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Tit_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Tit_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                @* Columna Car_Id *@
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Car_Id, "Car_Id", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Car_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Car_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                @* Columna Emp_EsActivo *@
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Emp_EsActivo, "Emp_EsActivo", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Emp_EsActivo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Emp_EsActivo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
            </div>
        </div>
    </div>
}
