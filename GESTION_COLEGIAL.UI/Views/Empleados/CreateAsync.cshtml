@model GESTION_COLEGIAL.Business.Models.EmpleadoViewModel
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/css/form-encargados.css" rel="stylesheet" />
}


<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">

            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/Empleados/Index">Empleados</a></li>
            <li class="breadcrumb-item active" aria-current="page">Crear Empleado</li>
        </ol>
    </nav>
</div>


@using (Html.BeginForm("Save", "Empleados", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="fluid-container">

        <div class="card form-encargados-card">
            <div class="card-header">
                <div class="header-content">
                    <div>
                        <h3 class="card-title-modern">Registro de Empleados</h3>
                        <p class="card-subtitle-modern">Complete la información del empleado</p>
                    </div>
                    @if (Model.Emp_Id == 0)
                    {
                        <div class="status-container">
                            <span class="badge-status active" id="statusBadge">
                                <span class="badge-dot active" id="statusDot"></span>
                                <span id="statusText">Estado Activo</span>
                            </span>
                            <label class="switch">
                                @Html.EditorFor(model => model.Per_EsActivo, new { htmlAttributes = new { @id = "statusToggle", @checked = "checked" } })
                                <span class="slider"></span>
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="separator"></div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Emp_Id)
                @Html.HiddenFor(model => model.Per_Id)
                <div class="form-row">
                    @* Columna Código *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Emp_Codigo, "Código", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Emp_Codigo, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Emp_Codigo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Título *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tit_Id, "Título", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.DropDownList("Tit_Id", Model.titulosList, "-- Seleccionar Título --", htmlAttributes: new { @class = "form-control form-input-modern" })
                            @Html.ValidationMessageFor(model => model.Tit_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Cargo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Car_Id, "Cargo", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.DropDownList("Car_Id", Model.cargosList, "-- Seleccionar Cargo --", htmlAttributes: new { @class = "form-control form-input-modern" })
                            @Html.ValidationMessageFor(model => model.Car_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Identidad *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Identidad, "Identidad", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_Identidad, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_Identidad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Primer Nombre *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_PrimerNombre, "Primer Nombre", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_PrimerNombre, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_PrimerNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Segundo Nombre *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_SegundoNombre, "Segundo Nombre", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_SegundoNombre, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_SegundoNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Apellido Paterno *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_ApellidoPaterno, "Apellido Paterno", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_ApellidoPaterno, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_ApellidoPaterno, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Apellido Materno *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_ApellidoMaterno, "Apellido Materno", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_ApellidoMaterno, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_ApellidoMaterno, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Fecha Nacimiento *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_FechaNacimiento, "Fecha Nacimiento", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_FechaNacimiento, new { htmlAttributes = new { @class = "form-control form-input-modern", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.Per_FechaNacimiento, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Correo Electronico *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_CorreoElectronico, "Correo Electronico", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_CorreoElectronico, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_CorreoElectronico, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Teléfono *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Telefono, "Telefono", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_Telefono, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_Telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Dirección *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Direccion, "Dirección", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_Direccion, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_Direccion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Sexo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Sexo, "Sexo", htmlAttributes: new { @class = "form-label-icon" })
                            @Html.EditorFor(model => model.Per_Sexo, new { htmlAttributes = new { @class = "form-control form-input-modern" } })
                            @Html.ValidationMessageFor(model => model.Per_Sexo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--Botones de accion en el formulario-->
                <div class="form-actions-modern">
                    @Html.ActionLink("Cancelar", "Index", "Empleados", null, new { @class = "btn btn-secondary-modern", @id = "cancelBtn" })
                    <button type="submit" class="btn btn-primary-modern">
                        <i class="mdi mdi-content-save"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Content/js/form-encargados.js"></script>
    <script src="~/Content/js/pages/empleados.js"></script>
    <script>
        Empleados.datatable({
            urlList: "@Url.Action("ListAsync")",
            urlInsert: "@Url.Action("CreateAsync")",
            urlUpdate: "@Url.Action("FindAsync")",
            urlDetail: "Detail"
        });
    </script>
}