
@model GESTION_COLEGIAL.Business.Models.EmpleadoViewModel
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "Empleados", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de Empleados</h3>
            </div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Emp_Id)
                @Html.HiddenFor(model => model.Per_Id)
                <div class="form-row">
                    @* Columna Código *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Emp_Codigo, "Código", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Emp_Codigo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Emp_Codigo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Persona *@
                    <!--<div class="col-md-6">
                    <div class="form-group">-->
                    @*@Html.LabelFor(model => model.Per_Id, "Id", htmlAttributes: new { @class = "control-label" })*@
                    @*@Html.DropDownList("Per_Id", null, htmlAttributes: new { @class = "form-control" })*@
                    @*@Html.ValidationMessageFor(model => model.Per_Id, "", new { @class = "text-danger" })*@
                    <!--</div>
                    </div>-->
                    @* Columna Título *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tit_Id, "Título", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("Tit_Id", Model.titulosList, "-- Seleccionar Título --", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Tit_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Cargo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Car_Id, "Cargo", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("Car_Id", Model.cargosList, "-- Seleccionar Cargo --", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Car_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Identidad *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Identidad, "Identidad", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_Identidad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_Identidad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Primer Nombre *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_PrimerNombre, "Primer Nombre", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_PrimerNombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_PrimerNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Segundo Nombre *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_SegundoNombre, "Segundo Nombre", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_SegundoNombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_SegundoNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Apellido Paterno *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_ApellidoPaterno, "Apellido Paterno", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_ApellidoPaterno, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_ApellidoPaterno, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Apellido Materno *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_ApellidoMaterno, "Apellido Materno", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_ApellidoMaterno, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_ApellidoMaterno, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Fecha Nacimiento *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_FechaNacimiento, "Fecha Nacimiento", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_FechaNacimiento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.Per_FechaNacimiento, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Correo Electronico *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_CorreoElectronico, "Correo Electronico", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_CorreoElectronico, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_CorreoElectronico, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Teléfono *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Telefono, "Telefono", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_Telefono, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_Telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Dirección *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Direccion, "Dirección", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_Direccion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_Direccion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Sexo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_Sexo, "Sexo", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_Sexo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_Sexo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Es Activo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Per_EsActivo, "Es Activo", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Per_EsActivo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Per_EsActivo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <div class="btn mr-2">
                        @Html.ActionLink("Cancelar", "Index", "Empleados")
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Content/js/pages/empleados.js"></script>
    <script>
        Empleados.datatable({
            urlList: "@Url.Action("List")",
            urlInsert: "@Url.Action("Create")",
            urlUpdate: "@Url.Action("Find")",
            urlDetail: "Detail"
        });
    </script>
}
