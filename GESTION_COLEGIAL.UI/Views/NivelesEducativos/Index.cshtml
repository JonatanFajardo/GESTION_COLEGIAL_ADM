
@model GESTION_COLEGIAL.UI.Models.NivelEducativoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Listado *@
<div class="card">
    <div class="card-header" style="background-color:white;">
        <h3>Listado de </h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@using (Html.BeginForm("Save", "NivelesEducativo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de NivelesEducativos</h3>
            </div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Niv_Id)
                <div class="form-row">
                    @* Columna Descripción *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Niv_Descripcion, "Niv_Descripcion", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Niv_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Niv_Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Es activo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EsActivo, "EsActivo", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.EsActivo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EsActivo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
            </div>
        </div>
    </div>
}

