@model GESTION_COLEGIAL.UI.Models.ModalidadViewModel
@{
    ViewBag.Title = "Index";
}

@* Listado *@
<div class="card">
    <div class="card-header" style="background-color:white;">
        <h3>Listado de modalidades</h3>
        <div class="col-md-3">
        </div>

    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" id="datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@using (Html.BeginForm("Create", "Modalidades", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de Razas</h3>
            </div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Mda_Id)
                <div class="form-row">
                    @* Columna Descripción *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mda_Descripcion, "Modalidad", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Mda_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Mda_Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
                @*</form>*@
            </div>
        </div>
    </div>
}

@section Scripts{

    @*<script type="text/javascript">
            @Html.Raw(ViewBag.JavaScriptFunction)
        </script>*@
    @*<script src="~/Content/js/components/datatable.init.js"></script>*@

    <script src="~/Content/js/pages/modalidades.js"></script>
    <script>
        Modalidades.datatable({listUrl: "@Url.Action("List")" });
    </script>
    @if (ViewBag.JavaScriptFunction != null)
    {
        <script type="text/javascript">
        @Html.Raw(ViewBag.JavaScriptFunction);
        </script>
    }
}
