@model GESTION_COLEGIAL.Business.Models.ModalidadViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Styles{
    <link href="~/Content/css/modal-detail.css" rel="stylesheet" />
}

<div class="breadcrumb-wrapper-content ">
    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modalidades</li>
        </ol>
    </nav>
</div>

<div class="fluid-container">
    @* Listado *@
    <div class="card">
        <div class="card-header" style="background-color:white;">
            <div class="row space-between">
                <div class="col-md-9"><h3>Listado de modalidades</h3></div>
                @* <div class="col-md-3"><button class="btn btn-primary mdi mdi-plus-circle-outline float-right" id="add-btn" data-toggle="modal" data-target="#edit-modal">  Nuevo</button></div> *@
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descripci�n</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <!-- Header with Orange Gradient -->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <i class="mdi mdi-pencil"></i>
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Ajax.BeginForm("CreateAsync", "Modalidades", new AjaxOptions
                {
                    HttpMethod = "Post",
                    OnBegin = "Catalogs.begin",
                    OnComplete = "Catalogs.complete",
                    OnFailure = "Catalogs.failure",
                    OnSuccess = "Catalogs.success"
                }))
                {
                    <div class="fluid-container">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(model => model.Mda_Id, new { @id = "item-id" })
                        <div class="modal-body">
                            <!-- Form Card -->
                            <div class="form-card">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Mda_Descripcion, "Descripción", htmlAttributes: new { @class = "form-label" })
                                            @Html.EditorFor(model => model.Mda_Descripcion, new { htmlAttributes = new { @class = "form-control form-control-modern", placeholder = "Ingrese la descripción de la modalidad" } })
                                            @Html.ValidationMessageFor(model => model.Mda_Descripcion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-modern-cancel" data-dismiss="modal">
                                <i class="mdi mdi-close mr-1"></i>Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary btn-modern-save">
                                <i class="mdi mdi-content-save mr-1"></i>Guardar
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Fin Modal -->
    <!-- Modal Delete-->
    <div class="modal" id="delete-modal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            @using (Ajax.BeginForm("DeleteAsync", "Modalidades", new AjaxOptions
            {
                HttpMethod = "Post",
                OnBegin = "Catalogs.begin",
                OnComplete = "Catalogs.complete",
                OnFailure = "Catalogs.failure",
                OnSuccess = "Catalogs.success"
            }))
            {
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" hidden>
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.Mda_Id, new { @id = "delete-item-id" })
                                    <p>�Est� seguro de que desea eliminar este registro?</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Fin Modal -->

    <!-- Modal Detalle -->
    <div class="modal fade" id="detail-modal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <!-- Header with Orange Gradient -->
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel">
                        <i class="fas fa-file-alt"></i>
                        Detalle de la Modalidad
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <!-- Info Card - ID and Description -->
                    <div class="info-card">
                        <div class="info-grid">
                            <div>
                                <label class="info-label">ID</label>
                                <p class="info-value" id="detail-mda-id"></p>
                            </div>
                            <div>
                                <label class="info-label">Descripción</label>
                                <p class="info-value" id="detail-mda-descripcion"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Section -->
                    <div class="audit-section">
                        <h6 class="audit-section-title">
                            <i class="fas fa-history"></i>
                            Información de Auditoría
                        </h6>

                        <!-- Created -->
                        <div class="audit-card">
                            <div class="audit-icon green">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="audit-info">
                                <div>
                                    <label class="audit-label">Creado por</label>
                                    <p class="audit-value" id="detail-mda-usuarioregistranombre"></p>
                                </div>
                                <div>
                                    <label class="audit-label">
                                        <i class="fas fa-calendar icon-small"></i>
                                        Fecha de creación
                                    </label>
                                    <p class="audit-value" id="detail-mda-fecharegistra"></p>
                                </div>
                            </div>
                        </div>

                        <!-- Modified -->
                        <div class="audit-card">
                            <div class="audit-icon blue">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="audit-info">
                                <div>
                                    <label class="audit-label">Modificado por</label>
                                    <p class="audit-value" id="detail-mda-usuariomodificanombre"></p>
                                </div>
                                <div>
                                    <label class="audit-label">
                                        <i class="fas fa-calendar icon-small"></i>
                                        Fecha de modificación
                                    </label>
                                    <p class="audit-value" id="detail-mda-fechamodifica"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="mdi mdi-close mr-1"></i>Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin Modal Detalle -->
</div>

@section Scripts{
    <script src="~/Content/js/pages/modalidades.js"></script>
    <script>
        Modalidades.datatableCatalogs({
            urlList: "@Url.Action("ListAsync")",
            urlDetail: "Detail"
        });
    </script>
    <script>
        Catalogs.configure({
            displayName: "modalidad",
            urlUpdate: "@Url.Action("FindAsync")"
        });
        CatalogsCfg.configure({
            displayName: "modalidad",
            getUrl: "@Url.Action("DetailAsync")"
        });
    </script>
    @if (ViewBag.JavaScriptFunction != null)
    {
        <script type="text/javascript">
        @Html.Raw(ViewBag.JavaScriptFunction);
        </script>
    }
}