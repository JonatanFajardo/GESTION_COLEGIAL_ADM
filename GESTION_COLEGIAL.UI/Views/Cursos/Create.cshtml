
@model GESTION_COLEGIAL.UI.Models.CursoViewModel
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "Cursos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de Cursos</h3>
            </div>

        </div>
    </div>
    <div class="card-body">
        @Html.HiddenFor(model => model.Cur_Id)
        <div class="form-row">
            @* Columna SeccionesCheckList *@
            <div class="col-md-6">
                <div class="form-group">
                    @for (int i = 0; i < Model.MateriasCheckList.Count; i++)
                    {
                        @Html.DisplayFor(model => model.MateriasCheckList[i].Mat_Nombre);
                        @Html.CheckBoxFor(model => model.MateriasCheckList[i].IsSelected)
                        @Html.HiddenFor(model => model.MateriasCheckList[i].Mat_Nombre)
                        @Html.HiddenFor(model => model.MateriasCheckList[i].Mat_Id)
                    }
                </div>
            </div>
        </div>
        <div class="form-row">
            @* Columna SeccionesCheckList *@
            <div class="col-md-6">
                <div class="form-group">
                    @* Itera y muestra ckebox con la respectiva descripción *@
                    @for (int i = 0; i < Model.SeccionesCheckList.Count; i++)
                    {
                        @Html.DisplayFor(model => model.SeccionesCheckList[i].Sec_Descripcion);
                        @Html.CheckBoxFor(model => model.SeccionesCheckList[i].IsSelected)
                        @Html.HiddenFor(model => model.SeccionesCheckList[i].Sec_Descripcion)
                        @Html.HiddenFor(model => model.SeccionesCheckList[i].Sec_Id)
                    }
                </div>
            </div>
            @* Columna ModalidadesCheckList *@
            <div class="col-md-6">
                <div class="form-group">
                    @* Itera y muestra ckebox con la respectiva descripción *@
                    @for (int i = 0; i < Model.ModalidadesCheckList.Count; i++)
                    {
                        @Html.DisplayFor(model => model.ModalidadesCheckList[i].Mda_Descripcion);
                        @Html.CheckBoxFor(model => model.ModalidadesCheckList[i].IsSelected)
                        @Html.HiddenFor(model => model.ModalidadesCheckList[i].Mda_Descripcion)
                        @Html.HiddenFor(model => model.ModalidadesCheckList[i].Mda_Id)
                    }
                </div>
            </div>
        </div>
        <div class="form-row">
            @* Columna CursoNivel *@
            <div class="col-md-6">
                <div class="form-group">
                    @* Itera y muestra ckebox con la respectiva descripción *@
                    @for (int i = 0; i < Model.CursoNivelesCheckList.Count; i++)
                    {
                        @Html.DisplayFor(model => model.CursoNivelesCheckList[i].Cun_Descripcion);
                        @Html.CheckBoxFor(model => model.CursoNivelesCheckList[i].IsSelected)
                        @Html.HiddenFor(model => model.CursoNivelesCheckList[i].Cun_Descripcion)
                        @Html.HiddenFor(model => model.CursoNivelesCheckList[i].Cun_Id)
                    }
                </div>
            </div>
            @* Columna Aula *@
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aul_Id, "Aula", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Aul_Id", Model.AulaList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aul_Id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            @* Columna Sección *@
           <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cno_Descripcion, "Curso nombre", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Cno_Id", Model.CursoNombreList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cno_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            @* Columna Nivel *@
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Niv_Id, "Nivel", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Niv_Id", Model.NivelEducativoList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Niv_Id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            @* Columna Modalidad *@
            @*<div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mda_Id, "Modalidad", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Mda_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Mda_Id, "", new { @class = "text-danger" })
                    </div>
                </div>*@
            @* Columna Es activo *@
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Cur_EsActivo, "Es activo", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Cur_EsActivo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cur_EsActivo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
    </div>
}
