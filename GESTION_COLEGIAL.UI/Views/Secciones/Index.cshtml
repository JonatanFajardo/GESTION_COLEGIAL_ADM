@model GESTION_COLEGIAL.UI.Models.SeccionViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Modalidades", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de Secciones</h3>
            </div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Sec_Id)
                <div class="form-row">
                    @* Columna Descripción *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Sec_Descripcion, "Descripción", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Sec_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sec_Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
            </div>
        </div>
    </div>
}

@* Listado *@
<div class="card">
    <div class="card-header" style="background-color:white;">
        <h3>Listado de modalidades</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/pages/secciones.js"></script>
    <script>
        Secciones.datatable({listUrl: "@Url.Action("List")" });
    </script>
    <script>
        Catalogs.configure({
            displayName: "secciones",
            getUrl: "@Url.Action("Find")",
            getUrlDelete: "@Url.Action("Delete")"
        });
    </script>
}