
@model GESTION_COLEGIAL.UI.Models.MateriaViewModel
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "Materia", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Registro de Materias</h3>
            </div>

            <div class="card-body">
                @Html.HiddenFor(model => model.Mat_Id)
                <div class="form-row">
                    @* Columna Nombre *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mat_Nombre, "Mat_Nombre", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Mat_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Mat_Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @* Columna Duración *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Dur_Id, "Dur_Id", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("Dur_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Dur_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    @* Columna Es activo *@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EsActivo, "EsActivo", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.EsActivo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EsActivo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Guardar</button>
                </div>
            </div>
    </div>
}
